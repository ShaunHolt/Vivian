<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="in.digibuddies.vivian">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.RECORD_AUDIO" />


    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".Splash"
            android:label="Vivian"
            android:launchMode="standard"
            android:noHistory="true"
            android:screenOrientation="portrait"
            android:theme="@android:style/Theme.NoTitleBar.Fullscreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MainActivity"
            android:configChanges="orientation|screenSize"
            android:windowSoftInputMode="adjustPan" />
        <activity android:name=".Help" />
        <activity android:name=".Chat"
            android:windowSoftInputMode="adjustPan"/>
        <activity android:name=".Hologram" />
        <activity android:name=".AboutUs" />
        <activity android:name=".Feedback" />
        <activity android:name=".Share" />
        <meta-data
            android:name="botPrimaryToken"
            android:value="1sCZSwKRBqk.cwA.pO0.o7ZBKJlST3arhpsdmny9ggSuy8KfLA66a3E5IBEzSOE" />
        <meta-data
            android:name="botName"
            android:value="therapytest" />
        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>